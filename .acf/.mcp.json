{
    "mcpServers": {
        "context7": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ],
            "env": {
                "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
            }
        },
        "perplexity": {
            "type": "stdio",
            "command": "uvx",
            "args": [
                "perplexity-mcp"
            ],
            "env": {
                "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
                "PERPLEXITY_MODEL": "${PERPLEXITY_MODEL}"
            }
        },
        "figma-mcp": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "claude-figma-mcp",
                "--stdio"
            ],
            "env": {
                "FIGMA_API_KEY": "${FIGMA_API_KEY}"
            }
        }
    }
}
